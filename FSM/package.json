{
  "name": "CAL-FSM",
  "version": "1.0.0",
  "scripts": {
    "preinstall": "npm install uglifycss -g",
    "build": "python build.py",
    "test": "npm run test-model && npm run test-selenium",
    "babel": "babel Deploy -d Deploy",
    "uglifyjs": "uglifyjs  --screw-ie8 --compress --keep-fnames --keep-quoted-props",
    "test-selenium": "mocha -t 15000 Tests/testSelenium.js",
    "test-model": "nyc --reporter=lcov --require babel-core/register mocha Tests/testModel.js"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "~6.10.4",
    "babel-istanbul": "^0.8.0",
    "babel-loader": "~6.2.4",
    "babel-polyfill": "~6.9.1",
    "babel-preset-es2015": "~6.9.0",
    "babel-register": "~6.9.0",
    "chai": "~3.5.0",
    "d3": "^4.2.0",
    "firefox-profile": "^0.4.0",
    "istanbul": "^0.4.3",
    "jsdom": "~9.2.0",
    "mocha": "~2.5.3",
    "purecss": "^0.6.0",
    "selenium-webdriver": "^2.53.3",
    "uglify-js": "^2.7.0",
    "webpack": "~1.13.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "nyc": {
    "exclude": [
      "/Tests"
    ]
  },
  "eslintConfig": {
    "rules": {
      "indent": [
        2,
        4
      ],
      "quotes": [
        2,
        "double",
        "avoid-escape"
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "semi": [
        2,
        "always"
      ]
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "ecmaFeatures": {
      "modules": true
    },
    "extends": "eslint:recommended"
  }
}
